# Cloudflare R2 Configuration
# Copy this file to .env and fill in your values
# Get these from: Cloudflare Dashboard > R2 > Manage R2 API Tokens

# Your Cloudflare account ID (from the R2 dashboard URL)
R2_ACCOUNT_ID=your_account_id

# R2 API credentials (create at: R2 > Manage R2 API Tokens > Create API Token)
R2_ACCESS_KEY_ID=your_access_key
R2_SECRET_ACCESS_KEY=your_secret_key

# R2 bucket name (create in Cloudflare dashboard)
R2_BUCKET=urban-data-platform

# Optional: prefix for all uploaded files (default: urban-data)
# R2_PREFIX=urban-data

# CORS allowed origins (comma-separated)
# Update this with your production domain
R2_CORS_ORIGINS=https://urbandata.example.com,http://localhost:3000

# PostGIS Database Configuration
# Used by s03b_load_h3_r9.py and s04b_load_h3_r8.py
# Start the database with: docker-compose up -d
DB_HOST=localhost
DB_PORT=5432
DB_NAME=urbanworld
DB_USER=postgres
DB_PASSWORD=postgres
